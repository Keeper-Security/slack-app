# Keeper Slack App - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================
# SLACK CONFIGURATION (Required)
# ============================================================
SLACK_APP_TOKEN=xapp-1-xxxx
SLACK_BOT_TOKEN=xoxb-xxxx
SLACK_SIGNING_SECRET=your_signing_secret
APPROVALS_CHANNEL_ID=C0XXXXXXX

# ============================================================
# KEEPER COMMANDER SERVICE MODE (Required)
# ============================================================
# Use host.docker.internal to connect to Keeper running on host machine
KEEPER_SERVICE_URL=http://host.docker.internal:3001/api/v2/
KEEPER_API_KEY=your_api_key

# ============================================================
# PEDM CONFIGURATION
# ============================================================
PEDM_ENABLED=false
PEDM_POLLING_INTERVAL=120

# ============================================================
# DEVICE APPROVAL CONFIGURATION
# ============================================================
DEVICE_APPROVAL_ENABLED=false
DEVICE_APPROVAL_POLLING_INTERVAL=120

